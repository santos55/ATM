@model Atm.Web.Models.CardModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.maskedinput.min.js")" type="text/javascript"></script>


@Html.ValidationSummary()

@using (Html.BeginForm("ValidateCard", "Login"))
{
    <div>
        <fieldset>
            <legend>Log in</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.CardNumber)
            </div>
            <div class="editor-label">
                @Html.EditorFor(m => m.CardNumber)
                @*@Html.ValidationMessageFor(m => m.CardNumber)*@
            </div>           
           
            <p>
                <input type="submit" value="OK" />
            </p>
        </fieldset>
    </div>
}


@section Scripts {
   
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script>
        $("#CardNumber").mask("9999-9999-9999-9999");     
    </script>
}