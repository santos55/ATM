@model Atm.Web.Models.BalanceModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Account Balance</h2>

<div>
    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(m => m.CardNumber)
        </div>
        <div class="editor-label">
            @Html.TextBoxFor(m => m.CardNumber, new { @readonly = true })
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Date)
        </div>
        <div class="editor-label">
            @Html.TextBoxFor(m => m.Date, new { @readonly = true })
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Amount)
        </div>
        <div class="editor-label">
            @Html.TextBoxFor(m => m.Amount, new { @readonly = true })
        </div>

        <div>
            @Html.ActionLink("Back", "Index", "Operation")
        </div>

    </fieldset>
</div>